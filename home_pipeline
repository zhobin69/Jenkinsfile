pipeline {
	agent {
		node {
			label 'myDefinedWorkspace'
			custumWorkspace '/home/khalesi/jenkins_workspace'
		}
	}
	
	stages {
		stage('Browser Test') {
			parallel {
				stage('Chrome Test') {
					steps {
						echo "Hi there"
						echo "I'm going to test chrome browser"
						sh "pwd"
					}
				}
				stage('FireFox Test') {
					steps {
						echo "Hi again"
						echo "I'm going to test FireFox"
					}
				}
			}
		}
	}
}
