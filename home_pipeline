pipeline {
	agent any
	stages {
		stage('No-op') {
			steps {
				sh 'ls'
			}
		}
	}
	post {
		always {
			echo "I have finished pipeline"
			deleteDir()  //delete workspace
		}
		success {
			mail to: 'alireza.khalesi@peykasa.ir', subject: 'success pipeline', body: 'this is success'
		}
		unstable {
			echo "I'm unstable"
		}
		failure {
			echo "I'm failed"
		}
		changed {
			echo "things are different"
		}
	}
}
